<MyRemote>:
    FloatLayout:

    Button:
        text: " /\ "  # Up Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.25, 'y': 0.55}
        on_press: root.StartForward(self)
        on_release: root.StopForward(self)

    Button:
        text: " \/ "  # Down Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.25, 'y': 0.3}
        on_press: root.StartBackward(self)
        on_release: root.StopBackward(self)

    Button:
        text: " <- "  # Left Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'x': 0.05, 'center_y': 0.45}
        on_press: root.StartLeft(self)
        on_release: root.StopLeft(self)

    Button:
        text: " -> "  # Right Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'x': 0.35, 'center_y': 0.45}
        on_press: root.StartRight(self)
        on_release: root.StopRight(self)
    
    Button:
        text: " Kick " 
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.9, 'center_y': 0.45} 
        on_press: root.kick(self)

    Button:
        text: " Dribble "
        size_hint: None, None 
        size: 100, 50
        pos_hint: {'center_x': 0.9, 'center_y': 0.55}
        on_press:root.ToggleDribble(self)
        on_release: root.ExitDribble(self)

    Button:
        text: " R "
        size_hint: None, None 
        size: 100, 50
        pos_hint: {'center_x': 0.4, 'center_y': 0.55}
        on_press:root.StartTurningRight(self)
        on_release: root.StopTurningRight(self)

    Button:
        text: " L "
        size_hint: None, None 
        size: 100, 50
        pos_hint: {'center_x': 0.1, 'center_y': 0.55}
        on_press: root.StartTurningLeft(self)
        on_release: root.StopTurningLeft(self)

    Label:
        text: "Remote Control"
        font_size: 50 
        pos_hint: {'center_x': 0.5, 'top': 1.35}
        color: 0, 0, 0, 1

    BoxLayout:
        pos_hint: {'center_x': 0.5, 'y': 0.065}
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: ip_input
            hint_text: "Enter IP Here."
            multiline: False
            size_hint_x: 25
        Button:
            text: "Connect"
            size_hint_x: 25
            on_release: root.update_ip()
    
    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            id: robot_id_input
            hint_text: 'Enter new Robot ID'
            multiline: False
            size_hint: (10, None)
            height: '40dp'
        Button:
            text: 'Update Robot ID'
            size_hint: (10, None)
            height: '40dp'
            on_release: root.update_robot_id()
