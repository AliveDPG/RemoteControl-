<MyRemote>:
    FloatLayout:

    Button:
        text: " /\ "  # Up Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.25, 'y': 0.35}
        on_press: root.StartForward(self)
        on_release: root.StopForward(self)

    Button:
        text: " \/ "  # Down Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.25, 'y': 0.1}
        on_press: root.StartBackward(self)
        on_release: root.StopBackward(self)

    Button:
        text: " <- "  # Left Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'x': 0.05, 'center_y': 0.25}
        on_press: root.StartLeft(self)
        on_release: root.StopLeft(self)

    Button:
        text: " -> "  # Right Arrow
        size_hint: None, None
        size: 100, 50
        pos_hint: {'x': 0.35, 'center_y': 0.25}
        on_press: root.StartRight(self)
        on_release: root.StopRight(self)
    
    Button:
        text: " Kick " 
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.9, 'center_y': 0.25} 
        on_press: root.kick(self)

    Button:
        text: " Dribble "
        size_hint: None, None 
        size: 100, 50
        pos_hint: {'center_x': 0.9, 'center_y': 0.35}
        on_press:root.ToggleDribble(self)
        on_release: root.ExitDribble(self)

    Button:
        text: " R "
        size_hint: None, None 
        size: 100, 50
        pos_hint: {'center_x': 0.4, 'center_y': 0.35}
        on_press:root.StartTurningRight(self)
        on_release: root.StopTurningRight(self)

    Button:
        text: " L "
        size_hint: None, None 
        size: 100, 50
        pos_hint: {'center_x': 0.1, 'center_y': 0.35}
        on_press: root.StartTurningLeft(self)
        on_release: root.StopTurningLeft(self)

    Label:
        text: "Remote Control"
        font_size: 50 
        pos_hint: {'center_x': 0.5, 'top': 1.35}
        color: 0, 0, 0, 1

    BoxLayout:
        height: "40dp"
        size_hint_y: None
        TextInput:
            hint_text: "Enter IP Here."
            size_hint_x: 20
        Button:
            text: "connect"
            size_hint_x: 25
