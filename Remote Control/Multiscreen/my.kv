WindowManager:
    Setup:
    MyRemote:

<Setup>:
    name: "setup"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        TextInput:
            id: ip_input
            hint_text: "Enter IP Here"
            multiline: False

        Button:
            text: "Connect"
            on_release: 
                root.update_ip()

<MyRemote>:
    name: "myremote"
    FloatLayout:

    Button:
        text: " /\\ "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.25, 'y': 0.55}
        on_press: root.start_action(root.movingForward)
        on_release: root.stop_action(root.movingForward)

    Button:
        text: " \\/ "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.25, 'y': 0.3}
        on_press: root.start_action(root.movingBackward)
        on_release: root.stop_action(root.movingBackward)

    Button:
        text: " <- "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'x': 0.05, 'center_y': 0.45}
        on_press: root.start_action(root.movingLeft)
        on_release: root.stop_action(root.movingLeft)

    Button:
        text: " -> "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'x': 0.35, 'center_y': 0.45}
        on_press: root.start_action(root.movingRight)
        on_release: root.stop_action(root.movingRight)

    Button:
        text: " Kick "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.9, 'center_y': 0.45}
        on_press: root.kick

    Button:
        text: " Stop "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.9, 'center_y': 0.3}
        on_press: root.stop

    Button:
        text: " Dribble "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.9, 'center_y': 0.55}
        on_press: root.toggle_dribble

    Button:
        text: " R "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.4, 'center_y': 0.55}
        on_press: root.start_action(root.turnRight)
        on_release: root.stop_action(root.turnRight)

    Button:
        text: " L "
        size_hint: None, None
        size: 100, 50
        pos_hint: {'center_x': 0.1, 'center_y': 0.55}
        on_press: root.start_action(root.turnLeft)
        on_release: root.stop_action(root.turnLeft)

    Label:
        text: "Remote Control"
        font_size: 50
        pos_hint: {'center_x': 0.5, 'top': 1.35}
        color: 0, 0, 0, 1

    BoxLayout:
        pos_hint: {'center_x': 0.5, 'y': 0.065}
        height: "40dp"
        size_hint_y: None

        TextInput:
            id: ip_input
            hint_text: "Enter IP Here."
            multiline: False
            size_hint_x: 25

        Button:
            text: "Connect"
            size_hint_x: 25
            on_release: root.update_ip(ip_input.text)
    
    BoxLayout:
        height: "40dp"
        size_hint_y: None

        TextInput:
            id: robot_id_input
            hint_text: 'Enter new Robot ID'
            multiline: False
            size_hint: (10, None)
            height: '40dp'

        Button:
            text: 'Update Robot ID'
            size_hint: (10, None)
            height: '40dp'
            on_release: root.update_robot_id()